{
  "manifest_version": 2,
  "name": "Thoughtful",
  "version": "1.0",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "browser_action": {
    "default_icon": "images/icon-32.png",
    "default_title": "Thoughtful",
    "default_popup": "index.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "declarativeNetRequest",
    "storage",
    "scripting",
    "<all_urls>"
  ],
  "web_accessible_resources": ["index.html"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "thoughtful@gneiss.dev"
    }
  },
  "description": "Save yourself from your own impulses to go down social media rabbit holes or endless doom-scrolling. Filter out websites while providing alternatives you'd rather go to, but give yourself some leeway if you need to go to these websites. ",
  "homepage_url": "https://github.com/nazarioricardo/thoughtful"
}
